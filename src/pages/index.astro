---
import '@fontsource-variable/inter';

import BaseLayout from '../layouts/Base.astro';
import Link from '../components/Link.astro';
---

<BaseLayout title="womogenes">
  <div
    class="flex h-full items-center justify-center p-4 transition-colors dark:bg-zinc-900 dark:text-white"
  >
    <div class="w-full max-w-lg">
      <!-- Title -->
      <div class="mb-2 flex-col items-center gap-4 tracking-tight">
        <img src="/favicon.svg" class="h-12 mb-2" />
        <h1 class="text-4xl font-black">William Y. &nbsp;Feng</h1>
      </div>

      <!-- Content -->
      <div>
        <p class="mb-2">dev, builder, artist</p>

        <!-- Social links -->
        <div class="mb-4 flex gap-2">
          <Link
            icon="lucide:github"
            href="https://github.com/womogenes"
            color="#000000"
          />
          <Link
            icon="lucide:youtube"
            href="https://youtube.com/c/WilliamYFeng"
            color="#ff0033"
          />
          <Link
            icon="lucide:instagram"
            href="https://instagram.com/womogenes"
            color="#c13584"
          />
        </div>

        <!-- Projects -->
        <div class="prose flex flex-col gap-2 leading-normal dark:text-white">
          <h2 class="mb-1 text-2xl font-bold dark:text-white">things</h2>

          <p>
            <a href="https://photonfarmers.pages.dev" target="_blank">
              photon farmers</a
            > &mdash; a game about the future of solar energy
            <span class="text-muted">(three.js, sveltekit)</span>
          </p>

          <p>
            <a
              href="https://spotify-pca-map.netlify.app/interactive"
              target="_blank"
            >
              spotify artist map</a
            > &mdash; pca-based map of 2.5k spotify artists
            <span class="text-muted">(python, d3.js)</span>
          </p>

          <p>
            <a href="https://selltoai.womogenes.com" target="_blank">
              sell to ai</a
            > &mdash; a game about product placement in the age of ai
            <span class="text-muted">(next.js, fastapi, openai api)</span>
          </p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  html,
  body {
    @apply h-full;
  }

  .prose a {
    @apply text-blue-500 dark:text-blue-300;
  }
  .prose p {
    @apply m-0;
  }

  .text-muted {
    @apply text-zinc-400 dark:text-zinc-300;
  }
</style>
